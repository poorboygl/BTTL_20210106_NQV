@model List<WebApp.Models.Category>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <a href="/category/create">Create</a>
    <form action="/category/delall" method="post">
        <table class="table table-bordered">
            <thead class="table table-dark">
                <tr>
                    <td>
                        <button class="btn bg-warning">Delete</button>
                    </td>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (WebApp.Models.Category item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="a" value="@item.Id" />
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="d" href="/category/delete/@item.Id">Delete</a>
                        </td>
                        <td>
                            <a href="/category/edit/@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    
<script>
    $('.d').click(function () {
        //console.log($(this).parent("td").prev().text()); lấy trong console
        //return false;
        var name =$(this).parent("td").prev().text();
        return confirm(`Are you sure delete ${name} ?`)
    });
</script>