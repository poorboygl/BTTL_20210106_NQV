<script>
    var $ = {};
    $.get = function (url, f) {
        var xhr = new XMLHttpRequest();
        xhr.open('get', url);
        xhr.send();
        xhr.onload = function () {
            console.log('ham tu viet');
            f.call(this, this.response);
        }
    }
    $.get('/ajax/categories', function (a) { console.log(a) });
</script>

